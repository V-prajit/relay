# Server Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=*

# Search Configuration
MAX_SEARCH_RESULTS=50

# Git Repository Configuration
REPO_CLONE_URL=https://github.com/V-prajit/relay.git
REPO_CLONE_DIR=/tmp/ripgrep-repo-cache
REPO_BRANCH=Prajit-digitocane
REPO_CLONE_DEPTH=1

# Background Sync Configuration
# Set to 0 to disable background sync
# Default: 300000 (5 minutes)
REPO_PULL_INTERVAL=300000

# GitHub Authentication (optional, for private repos)
# GITHUB_TOKEN=ghp_your_token_here
