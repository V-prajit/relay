# Server
PORT=8000

# APIs
CLAUDE_API_KEY=your_claude_key_here
GITHUB_TOKEN=your_github_token_here
DEEPSEEK_API_KEY=your_deepseek_key_here

# Paths
CLONE_DIR=/tmp/bugrewind-clones

# DeepSeek-OCR Configuration
# Memory limit for GPU (in GB)
DEEPSEEK_MEMORY_LIMIT=8

# Enable INT8 quantization (recommended for laptops)
DEEPSEEK_QUANTIZATION=true

# Target DPI for document rendering (150 for laptops, 200 for workstations)
DEEPSEEK_TARGET_DPI=150

# Enable OCR fallback engines
DEEPSEEK_ENABLE_PADDLE=true
DEEPSEEK_ENABLE_TESSERACT=true

# Logging
LOG_LEVEL=INFO

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account_identifier.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=BUGREWIND
SNOWFLAKE_SCHEMA=GIT_ANALYSIS
SNOWFLAKE_WAREHOUSE=BUGREWIND_WH
SNOWFLAKE_ROLE=PUBLIC

# Snowflake Feature Flags
ENABLE_SNOWFLAKE=true
ENABLE_CORTEX_LLM=true
ENABLE_CORTEX_SEARCH=true
