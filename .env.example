# PM Copilot Environment Variables
# Copy this file to .env and replace with your actual values

# Postman Action (deployed flow URL - set this in Postman Environment instead)
# ACTION_PUBLIC_URL=https://flows-action.postman.com/YOUR_FLOW_ID

# Claude API (for fallback/testing - Snowflake Cortex used in production)
calude_key=sk-ant-api03-YOUR_CLAUDE_API_KEY_HERE

# GitHub Integration
github_token=ghp_YOUR_GITHUB_TOKEN_HERE

# Slack Integration (for /impact command notifications)
# Get webhook from: https://api.slack.com/apps → Your App → Incoming Webhooks
slack_webhook_url=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
